{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@/components/*": ["./app/components/*"],
      "@/components/ui/*": ["./app/components/ui/*"],
      "@/lib/*": ["./app/lib/*"],
      "@/utils/*": ["./app/utils/*"],
      "@/types/*": ["./app/types/*"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/hooks/use-mobile": ["./app/hooks/use-mobile.ts", "./app/hooks/use-mobile.tsx"],
      "@/api/*": ["./app/api/*"],
      "@/styles/*": ["./app/styles/*", "./styles/*"],
      "@/public/*": ["./public/*"],
      "@/config/*": ["./app/config/*"],
      "@/data/*": ["./app/data/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
